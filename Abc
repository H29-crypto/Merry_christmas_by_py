
# Python Program to Generate Christmas Tree Pattern

# Generating Triangle 
def triangle(n):
    for i in range(n):
        for j in range(n-i):
            print(' ', end=' ')
        for k in range(2*i+1):
            print('*',end=' ')
        print()

# Generating Pole 
def pole(n):
    for i in range(n):
        for j in range(n-1):
            print(' ', end=' ')
        print('* * *')

# Input and Function Call
row = int(input('Enter number of rows: '))

triangle(row)
triangle(row)
pole(row)


print("Merry Christmas")
